generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id               Int                      @id @default(autoincrement())
  studentId        String                   @unique
  firstName        String
  lastName         String
  fatherName       String
  nationalId       String                   @unique
  birthDate        DateTime
  grade            Int
  section          String
  classId          Int
  phone            String?                  @unique
  email            String?                  @unique // Add email field for better contact management
  address          String?
  enrollmentDate   DateTime                 @default(now())
  isActive         Boolean                  @default(true)
  attendances      Attendance[]
  payments         Payment[]
  classAssignments StudentClassAssignment[]
  mealSubscriptions StudentMealSubscription[]
  transportAssignments StudentTransportAssignment[]
  class            Class                    @relation(fields: [classId], references: [id], onDelete: Cascade)

  // Prevent duplicate students in same class
  @@unique([firstName, lastName, classId], name: "unique_student_per_class")
  @@index([grade])
  @@index([classId])
  @@index([isActive])
  @@index([firstName, lastName])
  @@map("students")
}

model Teacher {
  id         Int      @id @default(autoincrement())
  employeeId String   @unique
  firstName  String
  lastName   String
  nationalId String   @unique
  phone      String   @unique // Ensure unique phone numbers
  email      String?  @unique // Ensure unique email addresses
  hireDate   DateTime @default(now())
  isActive   Boolean  @default(true)
  classes    Class[]

  // Prevent duplicate teacher names
  @@unique([firstName, lastName], name: "unique_teacher_name")
  @@map("teachers")
}

model Class {
  id               Int                      @id @default(autoincrement())
  grade            Int
  section          String
  teacherId        Int
  capacity         Int                      @default(30)
  isActive         Boolean                  @default(true)
  attendances      Attendance[]
  classAssignments StudentClassAssignment[]
  teacher          Teacher                  @relation(fields: [teacherId], references: [id], onDelete: Restrict)
  students         Student[]

  @@unique([grade, section])
  @@map("classes")
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  classId   Int
  date      DateTime
  status    String   // PRESENT, ABSENT, LATE, EXCUSED
  notes     String?
  createdAt DateTime @default(now())
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, date])
  @@index([date])
  @@index([classId, date])
  @@index([status])
  @@map("attendances")
}

model Payment {
  id          Int      @id @default(autoincrement())
  studentId   Int
  amount      Float
  dueDate     DateTime
  paidDate    DateTime?
  status      String   @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED
  type        String   // TUITION, MEAL, TRANSPORT, ACTIVITY, OTHER
  description String?
  createdAt   DateTime @default(now())
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([dueDate])
  @@index([status])
  @@map("payments")
}

model Announcement {
  id             Int      @id @default(autoincrement())
  title          String
  content        String
  priority       String
  author         String
  publishDate    DateTime @default(now())
  isActive       Boolean  @default(true)
  targetAudience String   @default("all")

  @@map("announcements")
}

model MealService {
  id          Int      @id @default(autoincrement())
  date        DateTime
  mealType    String   // BREAKFAST, LUNCH, SNACK
  menuItems   String
  price       Float    @default(0)
  totalOrders Int      @default(0)
  maxOrders   Int      @default(100)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())

  @@map("meal_services")
}

model TransportService {
  id             Int      @id @default(autoincrement())
  routeName      String
  driverName     String
  vehicleNumber  String
  capacity       Int      @default(20)
  pickupTime     String
  dropoffTime    String
  pickupPoints   String   // JSON array of pickup locations
  monthlyFee     Float
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt @default(now())
  
  // Relations
  assignments    StudentTransportAssignment[]

  @@unique([routeName])
  @@map("transport_services")
}

model StudentMealSubscription {
  id          Int         @id @default(autoincrement())
  studentId   Int
  mealType    String      // BREAKFAST, LUNCH, SNACK, ALL
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt @default(now())
  
  // Relations
  student     Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  @@unique([studentId, mealType])
  @@map("student_meal_subscriptions")
}

model StudentTransportAssignment {
  id               Int              @id @default(autoincrement())
  studentId        Int
  transportId      Int
  startDate        DateTime
  endDate          DateTime?
  pickupPoint      String
  isActive         Boolean          @default(true)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt @default(now())
  
  // Relations
  student          Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  transport        TransportService @relation(fields: [transportId], references: [id], onDelete: Cascade)
  
  @@unique([studentId, transportId])
  @@map("student_transport_assignments")
}

model StudentClassAssignment {
  id               Int       @id @default(autoincrement())
  studentId        Int
  classId          Int
  startDate        DateTime
  endDate          DateTime?
  reason           String?
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  student          Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  class            Class     @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId, startDate])
  @@map("student_class_assignments")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String   @default("TEACHER") // ADMIN, VICE_PRINCIPAL, TEACHER, FINANCE
  firstName    String?
  lastName     String?
  email        String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLoginAt  DateTime?
  
  // Relations
  auditLogs    AuditLog[]
  
  @@map("users")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // CREATE, UPDATE, DELETE, LOGIN, LOGOUT
  model     String   // Student, Teacher, Class, etc.
  recordId  Int?
  oldValues String?  // JSON string of old values
  newValues String?  // JSON string of new values
  userId    Int
  timestamp DateTime @default(now())
  ipAddress String?
  userAgent String?
  
  // Relations
  user      User     @relation(fields: [userId], references: [id])
  
  @@map("audit_logs")
}
